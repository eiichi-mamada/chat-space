.message
  .message__info
    %p.message__info--name
      = message.user.name
    %p.message__info--time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__contents
  - if message.content.present?
    %p.message__contents--text
      = message.content
  = image_tag message.image.url, class: 'messages__message--image' if message.image.present?